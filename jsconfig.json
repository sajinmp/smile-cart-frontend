{
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "apis": [
        "src/apis"
      ],
      "apis/*": [
        "src/apis/*"
      ],
      "assets": [
        "src/assets"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "constants": [
        "src/constants"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "hooks": [
        "src/hooks"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "routes": [
        "src/routes"
      ],
      "routes/*": [
        "src/routes/*"
      ],
      "stores": [
        "src/stores"
      ],
      "stores/*": [
        "src/stores/*"
      ],
      "translations": [
        "src/translations"
      ],
      "translations/*": [
        "src/translations/*"
      ],
      "utils": [
        "src/utils"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    },
    "pretty": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.d.ts"
  ]
}